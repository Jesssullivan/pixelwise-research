{
	"extends": "./.svelte-kit/tsconfig.json",
	"compilerOptions": {
		"allowJs": true,
		"checkJs": false,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"sourceMap": true,
		"target": "ES2018",
		"module": "ESNext",
		"moduleResolution": "bundler",
		// Override SvelteKit's verbatimModuleSyntax for Svelte 5 runes compatibility
		"verbatimModuleSyntax": false,
		// Add Svelte 5 types, Vite environment, and WebGPU
		"types": ["vite/client", "@webgpu/types"],
		// Svelte 5 specific settings
		"allowImportingTsExtensions": true,
		"noEmit": true,
		"moduleDetection": "force",
		// Svelte 5 module resolution workarounds
		"skipDefaultLibCheck": true,
		"noResolve": false,
		// suppressImplicitAnyIndexErrors removed in TypeScript 7 - use noUncheckedIndexedAccess instead
		"noLib": false
	},
	// Path aliases are handled by https://kit.svelte.dev/docs/configuration#alias
	// except $lib which is handled by https://kit.svelte.dev/docs/configuration#files
	//
	// TypeScript does not merge includes/excludes from extended configs -
	// copy relevant excludes from .svelte-kit/tsconfig.json when overriding
	"exclude": [
		"node_modules/**",
		"src/service-worker.js",
		"src/service-worker/**/*.js",
		"src/service-worker.ts",
		"src/service-worker/**/*.ts",
		"src/service-worker.d.ts",
		"src/service-worker/**/*.d.ts",
		"tests/_archived/**"
	]
}